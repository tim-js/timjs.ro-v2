---
import { getUpcomingEvents } from "@utils/meetup";
import { Picture } from "astro:assets";
import default_poster from "@assets/Poster.png";
const events = await getUpcomingEvents();
---

{
  !events.length ? null : (
    <section class="flex flex-col mx-auto max-w-4xl mt-24 gap-4 text-center items-center">
      <h2 class="text-4xl md:text-5xl mb-4 font-bold text-gray-800">
        Upcoming Events
      </h2>
      <li class="flex flex-col gap-8">
        {events.map((event) => (
          <a href={`/meetups/upcoming/${event.id}/`}>
            <Picture
              src={event.imageUrl || default_poster}
              alt={event.title}
              class="rounded-lg shadow-none hover:shadow-xl  duration-300  transition"
            />
          </a>
        ))}
      </li>
    </section>
  )
}
