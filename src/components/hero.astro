---
import Button from "./ui/button.astro";
import { TimJsLogo, RevoJsLogo } from "./ui/icons";
---

<main
  class="min-h-[calc(100svh-16rem)] flex flex-col place-items-center xl:grid grid-rows-2 grid-cols-1 xl:grid-rows-1 xl:grid-cols-2 pt-16 xl:pt-12">
  <div class="flex flex-col items-center xl:items-start">
    <h1
      class="text-3xl font-bold text-center xl:text-start xl:text-6xl xl:tracking-tight">
      Timi»ôoara JavaScript community
    </h1>
    <h2 class="mt-4 xl:mt-8 mb-2 xl:mb-4 text-xl text-slate-500 xl:text-3xl">
      Organizer of revo.js
    </h2>
    <RevoJsLogo width={120} />

    <p class="text-center xl:text-start">
      <span class="font-bold text-gray-800">
        Technology focused. <br />
        Community driven.<br />
        JavaScript conference.<br />
      </span>
      <span class="text-slate-500">
        2-day, single-track, not-for-profit event.
      </span>
    </p>
    <a
      href="https://yzunr6agkag.typeform.com/to/ehGtISsK"
      target="_blank"
      rel="noopener noreferrer">
      <Button class="mt-16 w-60 bg-brand hover:bg-yellow-400">
        <p class="text-gray-500">Submit your meetup talk</p>
      </Button>
    </a>
  </div>
  <TimJsLogo className="w-2/3 md:w-1/3 xl:w-full mt-16 xl:mt-0" />
</main>
