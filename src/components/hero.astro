---
import Button from "./ui/button.astro";
import { TimJsLogo, RevoJsLogo } from "./ui/icons";
import Submittalk from "./submittalk.astro";
---

<main
  class="min-h-[calc(100svh-16rem)] flex flex-col justify-center md:place-items-center lg:grid lg:grid-rows-1 lg:grid-cols-2">
  <div class="flex flex-col items-center lg:items-start">
    <h1
      class="text-3xl font-bold text-center lg:text-start lg:text-5xl xl:text-6xl lg:tracking-tight">
      Timi»ôoara JavaScript community
    </h1>
    <h2
      class="mt-4 lg:mt-8 mb-3 lg:mb-6 text-xl text-slate-500 lg:text-3xl xl:text-4xl">
      Organizer of revo.js
    </h2>
    <RevoJsLogo width={120} />

    <p class="text-center lg:text-start">
      <span class="font-bold text-gray-800">
        Technology focused. <br />
        Community driven.<br />
        JavaScript conference.<br />
      </span>
      <span class="text-slate-500">
        2-day, single-track, not-for-profit event.
      </span>
    </p>
    <div class="mt-16">
      <Submittalk/>
    </div>
  </div>
  <TimJsLogo className="w-2/3 lg:w-full hidden lg:block" />
</main>
