---
import Button from "./ui/button.astro";
import { RevoJsLogo } from "./ui/icons";
---

<section class="flex flex-col mx-auto max-w-4xl mt-24 text-center items-center">
  <h2 class="text-4xl md:text-5xl mb-4 font-bold text-gray-800">
    Organizer of
  </h2>
  <RevoJsLogo width={120} />
  <p class="mt-4">
    <span class="text-slate-500">
      2-day, single-track, not-for-profit event.
    </span>
  </p>
  <a href="https://revojs.ro" rel="noopener noreferrer" target="_blank" class="mt-8">
    <Button class=" w-60 bg-brand hover:bg-yellow-400"
      ><span class="text-gray-800">Visit revo.js website</span></Button
    >
  </a>
</section>
