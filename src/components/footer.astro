---
import Icon from "astro-icon";
import Container from "./container.astro";

const socials = [
  {
    name: "meetup",
    href: "https://www.meetup.com/tim-js/",
  },
  { name: "discord", href: "https://discord.com/invite/fTYxvBeBHr" },
  { name: "twitter", href: "https://twitter.com/timjscommunity" },
  {
    name: "youtube",
    href: "https://www.youtube.com/c/timjs/videos",
  },
];
---

<footer class="mt-20 mb-8">
  <Container class="flex flex-row items-center justify-center gap-4">
    {
      socials.map((social) => (
        <div class="flex-row items-center gap-8 p-2 transition translate-y-0 bg-gray-800 rounded-full cursor-pointer hover:-translate-y-1">
          <a href={social.href} rel="noopener noreferrer" target="_blank">
            <Icon
              class="h-6 text-white md:h-7"
              name={`simple-icons:${social.name}`}
            />
          </a>
        </div>
      ))
    }
  </Container>
</footer>
