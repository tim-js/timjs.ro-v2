---
import Icon from "astro-icon";
import Container from "./container.astro";

const socials = [
  {
    name: "meetup",
    href: "https://www.meetup.com/tim-js/",
  },
  { name: "discord", href: "https://discord.com/invite/bFdMVarJ" },
  { name: "twitter", href: "https://twitter.com/timjscommunity" },
  {
    name: "youtube",
    href: "https://www.youtube.com/c/timjs/videos",
  },
];
---

<footer class="mt-20 mb-8">
  <Container class="flex flex-row items-center justify-center gap-4">
    {
      socials.map((social, index) => (
        <div class="flex flex-row gap-4 items-center">
          <a
            href={social.href}
            rel="noopener noreferrer"
            target="_blank"
            class=" translate-y-0 hover:-translate-y-1 transition">
            <Icon class="h-8 md:h-10" name={`simple-icons:${social.name}`} />
          </a>
          {index !== socials.length - 1 && (
            <p class="text-2xl md:text-4xl">/</p>
          )}
        </div>
      ))
    }
  </Container>
</footer>
