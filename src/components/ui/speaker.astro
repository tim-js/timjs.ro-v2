---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  img: ImageMetadata;
  name: string;
  title: string;
}

const { name, img, title } = Astro.props;
---

<div class="flex flex-col items-center mb-2">
  <Image
    src={img}
    alt={name}
    class="object-fill rounded-lg relative w-full min-w-[200px] min-h-[200px] mb-3"
    width={400}
    height={400}
  />
  <div>
    <h3 class="font-bold text-2xl text-gray-800 text-center">{name}</h3>
    <h4 class="text-xl text-gray-800 text-center">{title}</h4>
  </div>
</div>
