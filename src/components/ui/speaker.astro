---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  img: ImageMetadata;
  name: string;
  title: string;
}

const { name, img, title } = Astro.props;
---

<div class="flex flex-col items-center mb-6">
  <div class="image-container mb-3">
    <Image
      src={img}
      alt={name}
      class="object-fill rounded-lg w-full min-w-[200px] min-h-[200px] transition-transform duration-300 ease-in-out hover:scale-110 filter-effect"
      width={400}
      height={400}
    />
  </div>
  <div>
    <h3 class="font-bold text-2xl text-gray-800 text-center">{name}</h3>
    <h4 class="text-xl text-gray-800 text-center">{title}</h4>
  </div>
</div>

<style>
  .image-container {
    clip-path: url(#squircle-clip);
  }

  .filter-effect {
    filter: contrast(180%) saturate(250%) brightness(90%) grayscale(1);
    mix-blend-mode: multiply;
  }
</style>

<svg class="hidden-svg h-1 w-1 absolute overflow-hidden" viewBox="0 0 1 1">
  <defs>
    <clipPath id="squircle-clip" clipPathUnits="objectBoundingBox">
      <path
        d="M 0,0.5
                C 0,0.0575  0.0575,0  0.5,0
                  0.9425,0  1,0.0575  1,0.5
                  1,0.9425  0.9425,1  0.5,1
                  0.0575,1  0,0.9425  0,0.5"
      ></path>
    </clipPath>
  </defs>
</svg>
